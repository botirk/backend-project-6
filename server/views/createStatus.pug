extends layout.pug 

block content 
    h1= t('statuses.creatingStatus')

    form(action= paths.statuses(), method= 'post')
        .mb-3
            label.form-label(for= 'data-name')= t('statuses.name')
            input.form-control(id = 'data-name', class= (errors.name ? 'is-invalid' : ''), type= 'text', placeholder= t('statuses.name'), name= 'data[name]', value= (status || {}).name)
            if errors.name
                .form-control-feedback.invalid-feedback= errors.name

        button.btn.btn-primary(type= 'submit')= t('statuses.create')