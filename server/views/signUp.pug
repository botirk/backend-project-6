extends layout.pug 

block content
    h1= t('signUp.signUp')

    form(action= paths.users(), method= 'post')
        .mb-3
            label.form-label(for= 'data-firstName')= t('signUp.firstName')
            input.form-control(id= 'data-firstName', class= (errors.firstName ? 'is-invalid' : ''), type= 'text', placeholder= t('signUp.firstName'), name= 'data[firstName]', value= (user || {}).firstName)
            if errors.firstName
                .form-control-feedback.invalid-feedback= errors.firstName

        .mb-3
            label.form-label(for= 'data-lastName')= t('signUp.lastName')
            input.form-control(id= 'data-lastName', class= (errors.lastName ? 'is-invalid' : ''), type= 'text', placeholder= t('signUp.lastName'), name= 'data[lastName]', value= (user || {}).lastName)
            if errors.lastName
                .form-control-feedback.invalid-feedback= errors.lastName

        .mb-3
            label.form-label(for= 'data-email')= t('signUp.email')
            input.form-control(id= 'data-email', class= (errors.email ? 'is-invalid' : ''), type= 'text', placeholder= t('signUp.email'), name= 'data[email]', value= (user || {}).email)
            if errors.email
                .form-control-feedback.invalid-feedback= errors.email

        .mb-3
            label.form-label(for= 'data-password')= t('signUp.password')
            input.form-control(id= 'data-password', class= (errors.password ? 'is-invalid' : ''), type= 'password', placeholder= t('signUp.password'), name= 'data[password]', value= (user || {}).password)
            if errors.password
                .form-control-feedback.invalid-feedback= errors.password

        button.btn.btn-primary(type= 'submit')= t('signUp.submit')