extends layout.pug 

block content 
    h1= t('login.login')

    form(action= paths.session(), method= 'post')
        .mb-3
            label.form-label(for= 'data-email')= t('signUp.email')
            input.form-control(type= 'text', placeholder= t('signUp.email'), name= 'data[email]')

        .mb-3
            label.form-label(for= 'data-password')= t('signUp.password')
            input.form-control(type= 'password', placeholder= t('signUp.password'), name= 'data[password]')

        button.btn.btn-primary(type= 'submit')= t('login.submit')