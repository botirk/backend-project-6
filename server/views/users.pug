extends layout.pug 
include mixins.pug

block content 
    h1= t('users.users')

    .table-responsive
        table.table
            thead 
                tr
                    th= t('layout.id')
                    th= t('users.fullName')
                    th= t('users.email')
                    th= t('layout.createDate')
                    th= t('layout.actions')
            tbody
                each user in users 
                    tr 
                        td= user.id 
                        td= user.firstName + ' ' + user.lastName 
                        td= user.email
                        td= timestamp(user.createDate)
                        td.d-flex.flex-wrap
                            a(href= paths.editUser(user.id)).btn.btn-primary.me-1= t('layout.edit')
                            +buttonTo(paths.editDeleteUser(user.id), 'delete')(class= 'btn btn-danger', value= t('layout.delete'))
